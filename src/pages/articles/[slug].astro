---
import { marked } from 'marked';
import { sanity } from '../../lib/sanity';
import Layout from '../../layouts/Layout.astro';

const siteId = import.meta.env.PUBLIC_SITE_ID || 'infostreamhub';

export async function getStaticPaths() {
  const siteId = import.meta.env.PUBLIC_SITE_ID || 'infostreamhub';
  const query = `*[_type == "article" && defined(slug.current) && siteId == $siteId] { "slug": slug.current }`;
  const articles = await sanity.fetch(query, { siteId });
  return articles.map(a => ({ params: { slug: a.slug } }));
}

const { slug } = Astro.params;

const query = `*[_type == "article" && slug.current == $slug && siteId == $siteId][0]{
  _id,
  title,
  "slug": slug.current,
  body,
  _createdAt,
  _updatedAt,
  vertical,
  keywords,
  excerpt,
  author,
  showRsocFeed,
  mainImage {
    asset->{
      url,
      metadata {
        dimensions
      }
    },
    alt
  }
}`;

const article = await sanity.fetch(query, { slug, siteId });

if (!article) {
  return new Response(null, {
    status: 404,
    statusText: 'Not found'
  });
}

// Helper: Convert title object to string
const getTitle = (titleObj) => {
  if (typeof titleObj === 'string') return titleObj;
  return titleObj?.en || titleObj?.he || Object.values(titleObj)[0] || 'Untitled';
};

const htmlContent = marked(article.body || '');
const paragraphs = htmlContent.split('</p>');
const beforeRSOC = paragraphs.slice(0, 2).join('</p>') + '</p>';
const afterRSOC = paragraphs.slice(2).join('</p>');

const relatedQuery = `*[_type == "article" && _id != $articleId && siteId == $siteId && defined(slug.current)] | order(_createdAt desc)[0..2]{
  _id,
  title,
  "slug": slug.current,
  _createdAt
}`;
const relatedArticles = await sanity.fetch(relatedQuery, { articleId: article._id, siteId });

const publishDate = new Date(article._createdAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const updateDate = article._updatedAt 
  ? new Date(article._updatedAt).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    })
  : publishDate;

const wordCount = article.body ? String(article.body).split(/\s+/).length : 0;
const readTime = Math.ceil(wordCount / 200);

const displayTitle = getTitle(article.title);

const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": displayTitle,
  "description": article.excerpt || (article.body ? String(article.body).substring(0, 160).replace(/<[^>]*>/g, '') : ""),
  "datePublished": article._createdAt,
  "dateModified": article._updatedAt || article._createdAt,
  "keywords": article.keywords?.join(', ') || '',
  "articleSection": article.vertical || 'General',
  "author": {
    "@type": "Person",
    "name": article.author || "InfoStream Hub Team"
  },
  "publisher": {
    "@type": "Organization",
    "name": "InfoStream Hub",
    "logo": {
      "@type": "ImageObject",
      "url": `${Astro.site}logo.png`
    }
  }
};

const shareUrl = `${Astro.site}articles/${slug}`;
const shareTitle = encodeURIComponent(displayTitle);
---

<Layout 
  title={`${displayTitle} - InfoStream Hub`}
  description={article.excerpt || (article.body ? String(article.body).substring(0, 160).replace(/<[^>]*>/g, '') : "")}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
  </Fragment>

  <article class="min-h-screen bg-white">
    
    <nav class="max-w-4xl mx-auto px-4 py-4" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2 text-sm text-gray-600">
        <li><a href="/" class="hover:text-blue-600">Home</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/articles" class="hover:text-blue-600">Articles</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-gray-900 truncate max-w-xs" aria-current="page">{displayTitle}</li>
      </ol>
    </nav>

    <header class="max-w-4xl mx-auto px-4 pt-2 pb-8">

      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
        {displayTitle}
      </h1>

      <div class="flex flex-wrap items-center gap-4 text-gray-600 pb-6 border-b border-gray-200">
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>{publishDate}</span>
        </div>
        
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>{readTime} min read</span>
        </div>

        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span>{article.author || "InfoStream Hub Team"}</span>
        </div>
      </div>

      {article._updatedAt && article._updatedAt !== article._createdAt && (
        <p class="text-sm text-gray-500 mt-4">
          Last updated: {updateDate}
        </p>
      )}
    </header>

    {article.mainImage?.asset?.url && (
      <div class="max-w-4xl mx-auto px-4 mb-8">
        <img 
          src={article.mainImage.asset.url}
          alt={article.mainImage.alt || displayTitle}
          class="w-full h-auto rounded-xl shadow-lg"
          width={article.mainImage.asset.metadata?.dimensions?.width}
          height={article.mainImage.asset.metadata?.dimensions?.height}
        />
      </div>
    )}

    <div class="max-w-4xl mx-auto px-4">
      
      <div class="prose prose-lg max-w-none">
        <Fragment set:html={beforeRSOC} />

        {article.showRsocFeed !== false && (
          <div class="my-12">
            <!-- RSOC Feed placeholder -->
          </div>
        )}

        <Fragment set:html={afterRSOC} />
      </div>

      <div class="my-12 py-8 border-y border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Share this article</h3>
