---
import { marked } from 'marked';
import { sanity } from '../../lib/sanity';
import Layout from '../../layouts/Layout.astro';

const siteId = import.meta.env.PUBLIC_SITE_ID || 'infostreamhub';

export async function getStaticPaths() {
  const siteId = import.meta.env.PUBLIC_SITE_ID || 'infostreamhub';
  const query = `*[_type == "article" && defined(slug.current) && siteId == $siteId] { "slug": slug.current }`;
  const articles = await sanity.fetch(query, { siteId });
  return articles.map(a => ({ params: { slug: a.slug } }));
}

const { slug } = Astro.params;

const query = `*[_type == "article" && slug.current == $slug && siteId == $siteId][0]{
  _id,
  title,
  "slug": slug.current,
  body,
  _createdAt,
  _updatedAt,
  vertical,
  keywords,
  excerpt,
  author,
  showRsocFeed,
  mainImage {
    asset->{
      url,
      metadata {
        dimensions
      }
    },
    alt
  }
}`;

const article = await sanity.fetch(query, { slug, siteId });

if (!article) {
  return Astro.redirect('/404');
}

// Debug logging
console.log('üîç Article data:', {
  title: article.title,
  vertical: article.vertical,
  keywords: article.keywords,
  keywordsType: typeof article.keywords,
  keywordsLength: article.keywords?.length,
  showRsocFeed: article.showRsocFeed
});

const htmlContent = marked(article.body || '');
const paragraphs = htmlContent.split('</p>');
const beforeRSOC = paragraphs.slice(0, 2).join('</p>') + '</p>';
const afterRSOC = paragraphs.slice(2).join('</p>');

const relatedQuery = `*[_type == "article" && _id != $articleId && siteId == $siteId && defined(slug.current)] | order(_createdAt desc)[0..2]{
  _id,
  title,
  "slug": slug.current,
  _createdAt
}`;
const relatedArticles = await sanity.fetch(relatedQuery, { articleId: article._id, siteId });

const publishDate = new Date(article._createdAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const updateDate = article._updatedAt 
  ? new Date(article._updatedAt).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    })
  : publishDate;

const wordCount = article.body ? String(article.body).split(/\s+/).length : 0;
const readTime = Math.ceil(wordCount / 200);

const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": article.title,
  "description": article.excerpt || (article.body ? String(article.body).substring(0, 160).replace(/<[^>]*>/g, '') : ""),
  "datePublished": article._createdAt,
  "dateModified": article._updatedAt || article._createdAt,
  "keywords": article.keywords?.join(', ') || '',
  "articleSection": article.vertical || 'General',
  "author": {
    "@type": "Person",
    "name": article.author || "InfoStream Hub Team"
  },
  "publisher": {
    "@type": "Organization",
    "name": "InfoStream Hub",
    "logo": {
      "@type": "ImageObject",
      "url": `${Astro.site}logo.png`
    }
  }
};

const shareUrl = `${Astro.site}articles/${slug}`;
const shareTitle = encodeURIComponent(article.title);
---

<Layout 
  title={`${article.title} - InfoStream Hub`}
  description={article.excerpt || (article.body ? String(article.body).substring(0, 160).replace(/<[^>]*>/g, '') : "")}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
  </Fragment>

  <article class="min-h-screen bg-white">
    
    <nav class="max-w-4xl mx-auto px-4 py-4" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2 text-sm text-gray-600">
        <li><a href="/" class="hover:text-blue-600">Home</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/articles" class="hover:text-blue-600">Articles</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-gray-900 truncate max-w-xs" aria-current="page">{article.title}</li>
      </ol>
    </nav>

    <header class="max-w-4xl mx-auto px-4 pt-2 pb-8">
      {article.vertical && (
        <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 text-sm font-semibold rounded-full mb-4">
          {article.vertical}
        </span>
      )}

      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6 leading-tight">
        {article.title}
      </h1>

      <div class="flex flex-wrap items-center gap-4 text-gray-600 pb-6 border-b border-gray-200">
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>{publishDate}</span>
        </div>
        
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>{readTime} min read</span>
        </div>

        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <span>{article.author || "InfoStream Hub Team"}</span>
        </div>
      </div>

      {article._updatedAt && article._updatedAt !== article._createdAt && (
        <p class="text-sm text-gray-500 mt-4">
          Last updated: {updateDate}
        </p>
      )}
    </header>

    {article.mainImage?.asset?.url && (
      <div class="max-w-4xl mx-auto px-4 mb-8">
        <img 
          src={article.mainImage.asset.url}
          alt={article.mainImage.alt || article.title}
          class="w-full h-auto rounded-xl shadow-lg"
          width={article.mainImage.asset.metadata?.dimensions?.width}
          height={article.mainImage.asset.metadata?.dimensions?.height}
        />
      </div>
    )}

    <div class="max-w-4xl mx-auto px-4">
      
      <div class="prose prose-lg max-w-none">
        <Fragment set:html={beforeRSOC} />

        {article.showRsocFeed !== false && article.keywords && article.keywords.length > 0 && (
          <div id="rsoc-keywords" class="my-12 p-8 bg-gradient-to-br from-blue-50 to-slate-50 rounded-xl border-2 border-blue-100 shadow-sm">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Related Topics</h3>
            <div class="flex flex-wrap gap-3">
              {article.keywords.map((keyword: string) => (
                <span class="inline-block px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-full hover:bg-blue-700 transition-colors">
                  {keyword}
                </span>
              ))}
            </div>
          </div>
        )}

        <Fragment set:html={afterRSOC} />
      </div>

      <div class="my-12 py-8 border-y border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Share this article</h3>
        <div class="flex flex-wrap gap-3">
          <a 
            href={`https://twitter.com/intent/tweet?url=${shareUrl}&text=${shareTitle}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 bg-sky-600 text-white rounded-lg hover:bg-sky-700 transition"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
            Twitter
          </a>

          <a 
            href={`https://www.facebook.com/sharer/sharer.php?u=${shareUrl}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Facebook
          </a>

          <a 
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${shareUrl}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
            LinkedIn
          </a>

          <a 
            href={`https://api.whatsapp.com/send?text=${shareTitle}%20${shareUrl}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 bg-green-700 text-white rounded-lg hover:bg-green-800 transition"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            WhatsApp
          </a>
        </div>
      </div>

      {relatedArticles.length > 0 && (
        <div class="my-12">
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Related Articles</h3>
          <div class="grid gap-6 md:grid-cols-3">
            {relatedArticles.map((related: any) => (
              <a href={`/articles/${related.slug}`} class="group block p-6 bg-white border border-gray-200 rounded-lg hover:border-blue-500 transition">
                <h4 class="font-semibold text-gray-900 group-hover:text-blue-600 mb-2">{related.title}</h4>
                <p class="text-sm text-gray-500">
                  {new Date(related._createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </p>
              </a>
            ))}
          </div>
        </div>
      )}

    </div>

  </article>
</Layout>
