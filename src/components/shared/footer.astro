---
import { NAVIGATION_LINKS, SOCIAL_LINKS, OTHER_LINKS } from "@/lib/config";
import Hashtag from "@/assets/svgs/hashtag.astro";
import Icon from "../bases/icon.astro";
---
<footer
  class="footer border-t border-primary-content/80 dark:border-primary-content/20 py-6"
>
  <div class="container">
    <div class="flex flex-col gap-4">
      <aside class="flex items-center gap-2">
        <Hashtag />
        <p>
          <strong class="text-xl">InfoStream Hub</strong>
          <br />
          Your trusted source for financial insights and news.
        </p>
      </aside>
      <nav
        class="flex flex-col gap-4 lg:flex-row lg:flex-wrap text-lg font-semibold"
      >
        <a href="/" class="link link-hover">Home</a>
        <a href="/articles" class="link link-hover">Articles</a>
        {
          NAVIGATION_LINKS.map(({ href, text, target }) => (
            <a href={href} class="link link-hover" target={target ?? "_self"}>
              {text}
            </a>
          ))
        }
      </nav>
    </div>
    <div class="divider w-full h-1"></div>
    <div class="flex flex-col gap-4">
      <nav>
        <div class="flex gap-4 items-center">
          <p class="font-bold text-base">Social Media:</p>
          <ul class="flex flex-wrap gap-4">
            <li>
              <a href="https://twitter.com/infostreamhub" class="link link-hover" target="_blank" title="Twitter" aria-label="Twitter">
                <Icon icon="newTwitter" />
              </a>
            </li>
            <li>
              <a href="https://www.facebook.com/infostreamhub" class="link link-hover" target="_blank" title="Facebook" aria-label="Facebook">
                <Icon icon="facebook" />
              </a>
            </li>
            <li>
              <a href="https://linkedin.com/company/infostreamhub" class="link link-hover" target="_blank" title="LinkedIn" aria-label="LinkedIn">
                <Icon icon="linkedin" />
              </a>
            </li>
          </ul>
        </div>
      </nav>
      <nav class="flex flex-wrap gap-4 text-sm mt-2">
        {
          OTHER_LINKS.map(({ href, text, target }) => (
            <a href={href} class="link link-hover" target={target ?? "_self"}>
              {text}
            </a>
          ))
        }
      </nav>
      <p class="text-sm text-gray-500 mt-2">
        Â© {new Date().getFullYear()} InfoStream Hub. All rights reserved.
      </p>
    </div>
  </div>
</footer>