---
import { Image } from "astro:assets";
import Divider from "@/components/bases/divider.astro";
import { getDateDistance } from "@/lib/utils/date";

type Props = {
  article: any; // Sanity article
};

const { article } = Astro.props;

// Fallback values for missing data
const category = article?.categories?.[0]?.title || "News";
const title = article?.title || "Untitled";
const excerpt = article?.excerpt || "";
const mainImage = article?.mainImage || "";
const slug = article?.slug?.current || article?.slug || "";
const publishedAt = article?.publishedAt || new Date().toISOString();
---

<article class="group relative isolate flex flex-col-reverse md:flex-col gap-4">
  <div class="aspect-video overflow-hidden rounded-md bg-base-200">
    {mainImage ? (
      <img
        src={mainImage}
        alt={title}
        class="w-full h-full object-cover"
        loading="eager"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-base-content/50">
        No Image
      </div>
    )}
  </div>
  <div class="flex flex-col gap-2">
    <div>
      <h2
        class="text-xl font-semibold lg:group-hover:underline underline-offset-2"
      >
        <a href={`/articles/${slug}`}>
          <span class="absolute inset-0 z-10 pointer-events-none"></span>
          {title}
        </a>
      </h2>
      <p class="text-base-content/90 text-base max-w-lg">
        {excerpt}
      </p>
    </div>
    <div class="flex items-center text-xs text-base-content/80 mt-2">
      <span class="text-primary dark:text-secondary">{category}</span>
      <Divider />
      <span>{getDateDistance(publishedAt)}</span>
    </div>
  </div>
</article>