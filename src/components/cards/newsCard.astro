---
import Divider from "../bases/divider.astro";

type Props = {
  article: any;
  index: number;
};

const { article, index } = Astro.props;

// Fallback values
const category = article?.categories?.[0]?.title || "News";
const title = article?.title || "Untitled";
const excerpt = article?.excerpt || article?.description || "";
const mainImage = article?.mainImage || article?.cover || "";
const slug = article?.slug?.current || article?.slug || "";
const readingTime = article?.readingTime || "5 min read";
---

<article
  class="col-span-1 group max-w-sm mx-auto flex flex-col gap-2 h-full relative isolate"
>
  <div class="aspect-video overflow-hidden rounded-md bg-base-200">
    {mainImage ? (
      <img
        src={mainImage}
        alt={title}
        loading={index < 3 ? "eager" : "lazy"}
        class="w-full h-full object-cover"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-base-content/50">
        No Image
      </div>
    )}
  </div>
  <div class="flex flex-col flex-1">
    <h3
      class="text-xl font-serif font-semibold lg:group-hover:underline line-clamp-2"
    >
      <a href={`/articles/${slug}`}>
        <span class="absolute inset-0 z-10 pointer-events-none"></span>
        {title}
      </a>
    </h3>
    <p class="text-sm text-base-content/80 line-clamp-3 text-pretty lg:mb-auto">
      {excerpt}
    </p>
    <div class="flex items-center text-xs text-base-content/80 mt-2">
      <span class="text-xs text-primary dark:text-secondary">{category}</span>
      <Divider />
      <span class="text-xs text-base-content/80">{readingTime}</span>
    </div>
  </div>
</article>