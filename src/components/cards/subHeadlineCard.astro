---
import Divider from "@/components/bases/divider.astro";
import { getDateDistance } from "@/lib/utils/date";

type Props = {
  article: any; // Sanity article
  isFirst?: boolean;
  isLast?: boolean;
};

const { article, isLast, isFirst } = Astro.props;

// Fallback values for missing data
const category = article?.categories?.[0]?.title || "News";
const title = article?.title || "Untitled";
const excerpt = article?.excerpt || "";
const mainImage = article?.mainImage?.asset?.url || "";
const imageAlt = article?.mainImage?.alt || title;
const slug = article?.slug?.current || article?.slug || "";
const publishedAt = article?.publishedAt || new Date().toISOString();
---

<article
  class:list={[
    "group py-2 flex items-stretch gap-2 group relative isolate",
    isFirst ? "pt-0" : "pt-2",
    isLast ? "border-b-0 pb-0" : "border-b border-base-300",
  ]}
>
  <div class="flex flex-col flex-1">
    <div class="flex items-center gap-2 mb-1">
      <div class="flex-1">
        <h3 class="text-base lg:group-hover:underline mb-1">
          <a href={`/articles/${slug}`}>
            <span class="absolute inset-0 z-10 pointer-events-none"></span>
            {title}
          </a>
        </h3>
        <p
          class="text-sm text-base-content/80 text-balance md:line-clamp-2 lg:line-clamp-3"
        >
          {excerpt}
        </p>
      </div>
    </div>
    <div class="flex items-center text-xs text-base-content/80 mt-1 lg:mt-auto">
      <span class="text-primary dark:text-secondary">{category}</span>
      <Divider />
      <span>{getDateDistance(publishedAt)}</span>
    </div>
  </div>
  <div
    class="overflow-hidden w-[165px] h-[125px] md:w-[120px] md:h-full shrink-0 bg-base-200 rounded flex items-center justify-center"
  >
    {mainImage ? (
      <img
        src={mainImage}
        alt={imageAlt}
        class="object-cover w-full h-full"
        loading="eager"
      />
    ) : (
      <span class="text-xs text-base-content/50">No Image</span>
    )}
  </div>
</article>